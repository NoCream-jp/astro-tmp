---
// src/layouts/CubeLayout.astro
---
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <style>
        body {
            margin: 0;
            background-color: #111;
            color: #eee;
            font-family: 'Noto Sans JP', sans-serif;
        }

        .cube-viewport {
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            /* 3D空間を作り出すための視点(奥行き)を設定 */
            perspective: 1000px;
        }

        .cube-container {
            width: 100%;
            height: 100%;
            position: relative;
            /* 子要素を3D空間に配置する */
            transform-style: preserve-3d;
            /* 視点を少し後ろに引いて、部屋全体が見えるように調整 */
            transform: translateZ(-300px);
            transition: transform 0.5s ease-out;
        }

        .face {
            position: absolute;
            /* 各面のサイズを定義 */
            width: 1200px;
            height: 900px;
            /* 中央に配置するためのオフセット */
            left: calc(50% - 600px);
            top: calc(50% - 450px);
            border: 2px solid #555;
            box-sizing: border-box;
        }

        /* 正面 (突き当りの壁) */
        .front {
            background: rgba(34, 34, 34, 0.9);
            /* Z軸方向に奥へ移動させる (奥行きの半分) */
            transform: translateZ(-600px);
            padding: 40px;
            overflow-y: auto;
        }

        /* 天井 */
        .top {
            background: linear-gradient(to bottom, #444, #222);
            /* X軸で90度回転させ、Y軸とZ軸で位置を調整 */
            transform: rotateX(90deg) translateY(-450px) translateZ(-150px);
        }

        /* 床 */
        .bottom {
            background: linear-gradient(to top, #444, #222);
            /* X軸で-90度回転させ、Y軸とZ軸で位置を調整 */
            transform: rotateX(-90deg) translateY(450px) translateZ(-150px);
        }

        /* 左壁 */
        .left {
            background: linear-gradient(to right, #444, #222);
            /* Y軸で90度回転させ、X軸とZ軸で位置を調整 */
            transform: rotateY(90deg) translateX(-600px) translateZ(0px);
        }

        /* 右壁 */
        .right {
            background: linear-gradient(to left, #444, #222);
            /* Y軸で-90度回転させ、X軸とZ軸で位置を調整 */
            transform: rotateY(-90deg) translateX(600px) translateZ(0px);
        }

        .content {
            max-width: 800px;
            margin: 0 auto;
        }

        h1 {
            font-size: 3rem;
            text-align: center;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <div class="cube-viewport">
        <div class="cube-container">
            <div class="face top"></div>
            <div class="face bottom"></div>
            <div class="face left"></div>
            <div class="face right"></div>
            <div class="face front">
                <div class="content">
                    <slot /> <!-- ここにProfileページの内容が入ります -->
                </div>
            </div>
        </div>
    </div>
</body>
</html>

