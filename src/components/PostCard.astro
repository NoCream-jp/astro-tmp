---
const { title, date, description, slug, thumbnail } = Astro.props;
---

<a href={"/blog/" + slug + "/"} style="text-decoration: none; color: inherit;">
    <article class="card">
        <img class="thumbnail" src={thumbnail} alt="thumbnail" />
        <div class="card-content">
            <h2>
                {title}
            </h2>
            <div class="bottom-row">
                <p class="desc">{description}</p>
                <p class="date">{date}</p>
            </div>
        </div>
    </article>
</a>

<style>
    .card {
        display: flex;
        align-items: center; /* 画像とテキストエリアの垂直位置を中央揃え */
        gap: 16px;
        padding: 16px;
        min-height: 100px;
        box-sizing: border-box;
        background-color: #ffffff;
        transition: background-color 0.2s ease;
    }
    
    .card:hover {
        background-color: #f2fffb;
    }
    
    .card .thumbnail {
        width: 120px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        flex-shrink: 0;
    }
    
    .card-content {
        display: flex;
        flex-direction: column; /* 中の要素 (titleとbottom-row) を縦に並べる */
        justify-content: space-between; /* titleを上、bottom-rowを下に配置 */
        flex-grow: 1;
        align-self: stretch; /* cardの高さ一杯に広がる */
        min-width: 0;
        padding: 4px 0; /* 上下に少し余白を持たせる */
    }
    
    .bottom-row {
        display: flex;
        justify-content: space-between; /* descriptionを左、dateを右に配置 */
        align-items: center; /* テキストの垂直位置を中央に揃える */
        gap: 30px;
    }
    
    .card h2 { /* title */
        font-size: 1.2rem;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .card .desc { /* description */
        font-size: 0.95rem;
        color: #444;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        min-width: 0; /* はみ出し防止 */
    }
    
    .card .date {
        font-size: 0.9rem;
        color: #888;
        margin: 0;
        white-space: nowrap;
        flex-shrink: 0; /* 日付が潰れないようにする */
    }
</style>