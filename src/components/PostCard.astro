---
const { title, date, description, slug, thumbnail } = Astro.props;
---

<a href={"/blog/" + slug + "/"} style="text-decoration: none; color: inherit;">
    <article class="card">
        <img class="thumbnail" src={thumbnail} alt="thumbnail" />
        <div class="card-content">
            <h2>
                {title}
            </h2>
            <p class="date">{date}</p>
            <p class="desc">{description}</p>
        </div>
    </article>
</a>

<style>
.card {
    background-color: #ffffff;
    border: 1px solid #ddd;
    border-radius: 12px;
    color: inherit;
    box-sizing: border-box;
    /* width: 100%; */
    height: 200px;
    flex: 0 0 280px;
    margin: 12px;
    padding: 16px;
    transition: transform 0.2s ease;
}

.card:hover {
    background-color: #f2fffb;
    border-color: #45fdcc;
}

.card .thumbnail {
    width: 20%;
    height: 20%; /* サムネイル画像の高さを固定 */
    object-fit: cover; /* 画像がコンテナに合わせて拡大・縮小される */
    border-radius: 8px 8px 0 0;
    max-height: 100px; /* 高さの最大値を設定 */
}

.card-content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.card-content h2 {
    text-decoration: none;
}

.card a {
    text-decoration: none;
    color: inherit;
}

.card h2 {
    font-size: 1.4rem;
    margin: 8px 0;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
}

.card .date {
    color: #888;
    font-size: 0.9rem;
}

.card .desc {
    color: #444;
    font-size: 1rem;
    margin-top: 8px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
}

</style>