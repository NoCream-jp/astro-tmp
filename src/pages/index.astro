---
import PostCard from '@/components/PostCard.astro';
import { getCollection } from 'astro:content';

// blog コレクションを取得
const posts = await getCollection("blog");

// slug の降順（新しいものが上に来る想定）でソート
posts.sort((a: { slug: any; }, b: { slug: string; }) => b.slug.localeCompare(a.slug));

// 最新記事のURLを生成（記事がない場合はトップページへ）
const latestPostUrl = posts.length > 0 ? `/blog/${posts[0].slug}/` : '/';

// 記事の数を制限
const limitedPosts = posts.slice(0, 6);
const hasMorePosts = posts.length > 6;
---

<html lang="ja">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>DripNotes</title>
        <link rel="stylesheet" href="/styles/index.css">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Monsterrat:wght@300;400&display=swap">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet">
    </head>

    <body>
        <header class="header">
            <div class="header-container w-container">
                <div class="header-left">
                    <a href="/">
                        <img class="logo" src="/images/icon.png" alt="header_icon" width="50" height="50">
                    </a>
                </div>
                <div class="header-center appear">
                    <a href="index.html" class="sentence">
                        Drip-Notes
                    </a>
                </div>
                <div class="header-right">
                    <button class="nav-toggle" id="nav-toggle" aria-label="Menu">
                        <i class="fas fa-bars"></i>
                        <span class="sr-only">MENU</span>
                    </button>
                </div>
            </div>
            <nav class="overlay-nav" id="overlay-nav">
                <div class="w-container">
                    <ul>
                        <li><a href="/profile/">Profile</a></li>
                        <li><a href={latestPostUrl}>Blog</a></li>
                        <li><a href="/all-works/">Works</a></li>
                    </ul>
                </div>
            </nav>
        </header>

        <section class="hero">
