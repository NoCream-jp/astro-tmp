---
import ProfileCard from '@/components/ProfileCard.astro';

// 1. 表示したい全てのプロフィールカードのデータを配列として定義
const allProfileCards = [
  { text: '関西在住', iconClass: 'fa-solid fa-location-dot' },
  { text: '応用情報技術者試験(IPA)合格', iconClass: 'fa-solid fa-trophy' },
  { text: '基本情報技術者試験(IPA)合格', iconClass: 'fa-solid fa-trophy' },
  { text: 'ITパスポート試験(IPA)合格', iconClass: 'fa-solid fa-trophy' },
  { text: '情報工学系の学部3年生', iconClass: 'fa-solid fa-graduation-cap' },
  { text: 'コーヒーがないと不健康になります', iconClass: 'fa-solid fa-heart' },
  { text: 'ネットワーク、機械学習分野について勉強中', iconClass: 'fa-solid fa-graduation-cap' },
  { text: '個人サイトを鋭意制作中', iconClass: 'fa-solid fa-graduation-cap' },
  { text: '和歌山大学に通っています', iconClass: 'fa-solid fa-location-dot' },
];

// 2. カードデータをアイコンクラスごとにグループ化する
const groupedCards = allProfileCards.reduce((acc, card) => {
  const key = card.iconClass;
  if (!acc[key]) {
    acc[key] = [];
  }
  acc[key].push(card);
  return acc;
}, {} as Record<string, typeof allProfileCards>);

// 3. グループのキー（アイコンクラス）のリストを取得
const iconGroups = Object.keys(groupedCards);
---

<html lang="ja">

    <head>
        <link rel="stylesheet" href="/styles/index.css">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>DripNotes</title>
        <link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css">

        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c&family=Oxanium:wght@200..800&family=Tilt+Neon&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet">
    </head>

    <body>
        <header class="header">
            <div class="header-container">
                <div class="header-left">
                    <a href="/index.html" class="header-icon-link">
                        <button class="home-back-button" aria-label="BackToHome">
                            <i class="fas fa-arrow-left"></i>
                        </button>
                    </a>
                </div>
                <div class="header-right">
                    <div class="header-sentence"><i class="fas fa-user"></i> Profile</div>
                    <a href="/" class="header-icon-link share" aria-label="共有"><i class="fa-solid fa-link"></i></a>
                </div>
            </div>
        </header>

       <main>
            <div class="profile-tabs-container">
                <div class="profile-tabs-list">
                    <!-- 4. アイコンのリストを元にタブボタンを動的に生成 -->
                    {iconGroups.map((iconClass, index) => (
                        <button
                            class:list={["profile-tab-trigger", "header-icon-link", { active: index === 0 }]}
                            data-tab={`profile-tab-${iconClass.replace(/\s+/g, '-')}`}
                        >
                            <i class={iconClass}></i>
                        </button>
                    ))}
                </div>

                <!-- 5. グループ化されたデータを元にタブコンテンツとカードを動的に生成 -->
                {Object.entries(groupedCards).map(([iconClass, cards], index) => (
                    <div
                        class:list={["profile-tab-content", { active: index === 0 }]}
                        id={`profile-tab-${iconClass.replace(/\s+/g, '-')}`}
                    >
                        {cards.map(card => <ProfileCard text={card.text} iconClass={card.iconClass} />)}
                    </div>
                ))}
            </div>

       </main>
        <script src="/scripts/indexScript.js" defer></script>
    </body>
</html>